@using RollingShutterMVC.Models.ViewsModels
@model UserCreateViewModel
@{
    ViewData["Title"] = "Adım 1: Kullanıcı Oluştur";
}

<h2>Kullanıcı Oluştur</h2>
<form asp-action="Step1" method="post">
    <div class="form-group">
        <label asp-for="Username">Kullanıcı Adı</label>
        <input asp-for="Username" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Password">Şifre</label>
        <input asp-for="Password" type="password" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Şifreyi Onayla</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" required />
        <input asp-for="Role" type="hidden" class="form-control" value="Admin" />
    </div>
    <button type="submit" class="btn btn-primary">Devam Et</button>
</form>
